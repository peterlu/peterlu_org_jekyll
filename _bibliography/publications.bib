	issn = {1520-5118},
	doi = {10.1021/jf300817h},
	url = {http://pubs.acs.org/doi/abs/10.1021/jf300817h},
	author = {Melanie M. Hoehl and Peter J. Lu and Peter A. Sims and Alexander H. Slocum},
    pdf = {/pdf/publications/2012/JAgricFoodChem_60_6349_2012.pdf},
